<!DOCTYPE html>
<html>
<head>
  <title>SDBilling</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://checkout.stripe.com/v2/checkout.js" %>

  <script type="text/javascript">
    $(document).ready(function() {
      Billing.set('stripeKey', "<%= Rails.configuration.stripe[:publishable_key] %>");
    });
  </script>

  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <h2>SDBilling</h2>
  <div data-yield="main"></div>
</div>

</body>
</html>
